{{!--
        * outlet
        * binding
        * pre-built modals
        * blur
        * frost-modal-animation
        *  - predefined animations are available via the (frost-modal-animation) helper
          - form
          - message
        *
      --}}


{{!-- BEGIN-SNIPPET basic-binding-api }}
  {{frost-modal-binding 'modal-foo'
    animation= // e.g. (frost-modal-animation 'message')
    classModifier= // e.g. 'special'
    closeOnOutsideClick= // (false)
    isVisible= // Required binding
    noBlur= // (false)
    params=(hash
      foo=
      bar=
    )
    targetOutlet= // ('modal')
    onCancel= // e.g. (action 'foo')
    onClose= // Required binding
    onConfirm= // e.g. (action 'foo')
  }}
{{ END-SNIPPET --}}

{{! BEGIN-SNIPPET binding-animation-predefined }}
{{frost-modal-binding 'basic-modal'
  animation=(frost-modal-animation 'message')
  closeOnOutsideClick=true
  isVisible=isPredefinedVisible
  onClose=(action (mut isPredefinedVisible) false)
}}
{{! END-SNIPPET}}

{{! BEGIN-SNIPPET binding-animation-local }}
{{frost-modal-binding 'basic-modal'
  animation=localAnimation
  closeOnOutsideClick=true
  isVisible=isLocalVisible
  onClose=(action (mut isLocalVisible) false)
}}
{{! END-SNIPPET}}

